<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class=".GroceryListBinding">

        <variable
            name="viewModel"
            type="com.example.wasteless.page.grocery_list.GroceryListViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/your_lists_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Lists"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/lists_recycler"
            android:layout_width="200dp"
            android:layout_height="300dp"
            android:layout_marginTop="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/your_lists_text"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <EditText
            android:id="@+id/new_list_name_tf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:hint="New List name"
            android:text="@={viewModel.newListName}"
            app:layout_constraintTop_toBottomOf="@id/lists_recycler"
            app:layout_constraintBottom_toTopOf="@id/add_list_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/add_list_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="200dp"
            android:text="ADD LIST"
            android:onClick="@{() -> viewModel.addListFromAPI(viewModel.newListName)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>